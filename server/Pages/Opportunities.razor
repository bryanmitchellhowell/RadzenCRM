@page "/opportunities"
@layout MainLayout
@inherits RadzenCrm.Pages.OpportunitiesComponent

@using Radzen
@using Radzen.Blazor
@using RadzenCrm.Models.Crm
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Opportunities">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenDataGrid @ref="grid0" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getOpportunitiesResult" TItem="RadzenCrm.Models.Crm.Opportunity" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="Id" Title="Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="Amount" Title="Amount">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="Name" Title="Name">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="UserId" Title="User Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="ContactId" SortProperty="Contact.Email" GroupProperty="Contact.Email" FilterProperty="Contact.Email" Title="Contact">
              <Template Context="data">
              @(data.Contact?.Email)
              </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="StatusId" SortProperty="OpportunityStatus.Name" GroupProperty="OpportunityStatus.Name" FilterProperty="OpportunityStatus.Name" Title="Opportunity Status">
              <Template Context="data">
              @(data.OpportunityStatus?.Name)
              </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Property="CloseDate" FormatString="{0:MM/dd/yyyy}" Title="Close Date">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="RadzenCrm.Models.Crm.Opportunity" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="radzenCrmModelsCrmOpportunity">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, radzenCrmModelsCrmOpportunity))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenDataGridColumn>
          </Columns>
        </RadzenDataGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
