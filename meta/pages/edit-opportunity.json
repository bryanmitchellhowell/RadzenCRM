{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Amount",
                              "component": "Amount",
                              "name": "AmountLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "decimal",
                              "type": "numeric",
                              "name": "Amount",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${opportunity.Amount}"
                            },
                            {
                              "type": "required-validator",
                              "name": "AmountRequiredValidator",
                              "component": "Amount",
                              "text": "Amount is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Name",
                              "component": "Name",
                              "name": "NameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 256,
                              "type": "textbox",
                              "name": "Name",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${opportunity.Name}"
                            },
                            {
                              "type": "required-validator",
                              "name": "NameRequiredValidator",
                              "component": "Name",
                              "text": "Name is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "User Id",
                              "component": "UserId",
                              "name": "UserIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 450,
                              "type": "textbox",
                              "name": "UserId",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${opportunity.UserId}"
                            },
                            {
                              "type": "required-validator",
                              "name": "UserIdRequiredValidator",
                              "component": "UserId",
                              "text": "UserId is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Contact",
                              "component": "ContactId",
                              "name": "ContactIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getContactsResult}",
                              "textProperty": "Email",
                              "valueProperty": "Id",
                              "placeholder": "Choose Contact",
                              "valueType": "int",
                              "type": "dropdown",
                              "name": "ContactId",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${opportunity.ContactId}"
                            },
                            {
                              "type": "required-validator",
                              "name": "ContactIdRequiredValidator",
                              "component": "ContactId",
                              "text": "ContactId is required",
                              "style": {
                                "position": "absolute"
                              },
                              "defaultValue": "0"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Opportunity Status",
                              "component": "StatusId",
                              "name": "StatusIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getOpportunityStatusesResult}",
                              "textProperty": "Name",
                              "valueProperty": "Id",
                              "placeholder": "Choose OpportunityStatus",
                              "valueType": "int",
                              "type": "dropdown",
                              "name": "StatusId",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${opportunity.StatusId}"
                            },
                            {
                              "type": "required-validator",
                              "name": "StatusIdRequiredValidator",
                              "component": "StatusId",
                              "text": "StatusId is required",
                              "style": {
                                "position": "absolute"
                              },
                              "defaultValue": "0"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Close Date",
                              "component": "CloseDate",
                              "name": "CloseDateLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime",
                              "dateFormat": "MM/dd/yyyy",
                              "type": "datepicker",
                              "name": "CloseDate",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${opportunity.CloseDate}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CloseDateRequiredValidator",
                              "component": "CloseDate",
                              "text": "CloseDate is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update Opportunity",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "CRM.updateOpportunity",
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${parameters.Id}"
                          },
                          {
                            "name": "Opportunity",
                            "value": "${opportunity}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${opportunity}",
                            "condition": ""
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "RadzenCrm.Models.Crm.Opportunity",
                  "data": "${opportunity}",
                  "visible": "${opportunity != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "CRM.getOpportunityById",
        "parameters": [
          {
            "name": "Id",
            "value": "${parameters.Id}"
          }
        ],
        "then": [
          {
            "name": "opportunity",
            "type": "set",
            "value": "${result}",
            "valueType": "RadzenCrm.Models.Crm.Opportunity"
          }
        ],
        "error": [],
        "type": "invoke"
      },
      {
        "name": "CRM.getContacts",
        "parameters": [],
        "then": [
          {
            "name": "getContactsResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<RadzenCrm.Models.Crm.Contact>"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "CRM.getOpportunityStatuses",
        "parameters": [],
        "then": [
          {
            "name": "getOpportunityStatusesResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<RadzenCrm.Models.Crm.OpportunityStatus>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Opportunity",
  "layout": "Main"
}